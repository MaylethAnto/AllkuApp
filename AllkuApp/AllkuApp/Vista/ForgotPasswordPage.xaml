<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllkuApp.Vista.ForgotPasswordPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <!-- Fondo principal rojo con huellas -->
        <Grid BackgroundColor="#FF3B3B">
            <!-- Patrón de huellas -->
            <Image Source="paw_pattern.png"
                   Aspect="Fill"
                   Opacity="0.1"
                   VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand"/>

            <!-- Botón de retroceso -->
            <ImageButton 
                Source="back_arrow_white.png"
                HeightRequest="24"
                WidthRequest="24"
                BackgroundColor="Transparent"
                VerticalOptions="Start"
                HorizontalOptions="Start"
                Margin="15,40,0,0"
                Clicked="OnBackButtonClicked"/>
        </Grid>

        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <!-- Espacio para logo -->
                    <RowDefinition Height="*"/>
                    <!-- Panel blanco -->
                </Grid.RowDefinitions>

                <!-- Logo en la parte superior -->
                <Image Grid.Row="0"
                       Source="allkaapp_logo_white.png"
                       HeightRequest="200"
                       WidthRequest="200"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Margin="0,40,0,0"/>

                <!-- Panel blanco curvo -->
                <Frame Grid.Row="1"
                       BackgroundColor="White"
                       CornerRadius="30"
                       HasShadow="False"
                       Padding="20,30,20,20"
                       Margin="0,-30,0,0">
                    <StackLayout Spacing="15">
                        <Label Text="Recuperar Contraseña"
                               FontSize="24"
                               TextColor="Black"
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               Margin="0,40,0,20"/>

                        <!-- Usuario -->
                        <Label Text="USUARIO"
                               TextColor="#666666"
                               FontSize="12"/>
                        <Frame BackgroundColor="#F5F5F5"
                               Padding="15,0"
                               CornerRadius="5"
                               HasShadow="False"
                               HeightRequest="45">
                            <Entry x:Name="UsernameEntry"
                                   Placeholder="Ingresa el Usuario"
                                   PlaceholderColor="#CCCCCC"
                                   BackgroundColor="Transparent"
                                   TextColor="Black"/>
                        </Frame>

                        <!-- Correo -->
                        <Label Text="CORREO ELECTRÓNICO"
                               TextColor="#666666"
                               FontSize="12"
                               Margin="0,10,0,0"/>
                        <Frame BackgroundColor="#F5F5F5"
                               Padding="15,0"
                               CornerRadius="5"
                               HasShadow="False"
                               HeightRequest="45">
                            <Entry x:Name="EmailEntry"
                                   Placeholder="Ingresa el Correo Electrónico"
                                   Keyboard="Email"
                                   PlaceholderColor="#CCCCCC"
                                   BackgroundColor="Transparent"
                                   TextColor="Black"/>
                        </Frame>

                        <!-- Botón de recuperar -->
                        <Button Text="Recuperar Contraseña"
                                BackgroundColor="#0033CC"
                                TextColor="White"
                                CornerRadius="5"
                                HeightRequest="45"
                                Margin="0,20,0,10"
                                Clicked="OnRecuperarClicked"/>

                        <Label x:Name="statusLabel"
                               HorizontalOptions="Center"
                               TextColor="#FF3B3B"/>
                    </StackLayout>
                </Frame>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
