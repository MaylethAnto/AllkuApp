<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllkuApp.Vista.LoginPage"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <!-- Fondo principal rojo con huellas -->
        <Grid BackgroundColor="#FF3B3B">
            <!-- Patrón de huellas -->
            <Image Source="paw_pattern.png"
                   Aspect="Fill"
                   Opacity="0.1"
                   VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand"/>
        </Grid>

        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <!-- Espacio para logo -->
                    <RowDefinition Height="*"/>
                    <!-- Panel blanco -->
                </Grid.RowDefinitions>

                <!-- Logo en la parte superior -->
                <Image Grid.Row="0"
                       Source="allkaapp_logo_white.png"
                       HeightRequest="200"
                       WidthRequest="200"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Margin="0,40,0,0"/>

                <!-- Panel blanco curvo -->
                <Frame Grid.Row="1"
                       BackgroundColor="White"
                       CornerRadius="30"
                       HasShadow="False"
                       Padding="20,30,20,20"
                       Margin="0,-30,0,0">

                    <StackLayout Spacing="15">
                        <Label Text="Iniciar Sesión"
                               FontSize="24"
                               TextColor="Black"
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               Margin="0,40,0,20"/>

                        <!-- Usuario -->
                        <Label Text="USUARIO"
                               TextColor="#666666"
                               FontSize="12"/>
                        <Frame BackgroundColor="#F5F5F5"
                               Padding="15,0"
                               CornerRadius="5"
                               HasShadow="False"
                               HeightRequest="45">
                            <Entry x:Name="usernameEntry"
                                   Placeholder="Ingresa tu Usuario"
                                   PlaceholderColor="#CCCCCC"
                                   BackgroundColor="Transparent"
                                   TextColor="Black"/>
                        </Frame>

                        <!-- Contraseña -->
                        <Label Text="CONTRASEÑA"
                               TextColor="#666666"
                               FontSize="12"
                               Margin="0,10,0,0"/>
                        <Frame BackgroundColor="#F5F5F5"
                               Padding="15,0"
                               CornerRadius="5"
                               HasShadow="False"
                               HeightRequest="45">
                            <Entry x:Name="passwordEntry"
                                   Placeholder="******"
                                   IsPassword="True"
                                   PlaceholderColor="#CCCCCC"
                                   BackgroundColor="Transparent"
                                   TextColor="Black"/>
                        </Frame>

                        <!-- Botón de login -->
                        <Button Text="Iniciar Sesión"
                                BackgroundColor="#0033CC"
                                TextColor="White"
                                CornerRadius="5"
                                HeightRequest="45"
                                Margin="0,20,0,10"
                                Clicked="OnLoginClicked"/>

                        <!-- Status label -->
                        <Label x:Name="statusLabel"
                               HorizontalOptions="Center"
                               TextColor="#FF3B3B"/>

                        <!-- Enlaces -->
                        <Label Text="¿Olvidaste tu contraseña?"
                               TextColor="#666666"
                               HorizontalOptions="Center"
                               FontSize="14"
                               Margin="0,10,0,0">
                            <Label.GestureRecognizers>
                             <TapGestureRecognizer Tapped="OnOlvidasteContrasenaClicked"/>
                             </Label.GestureRecognizers>
                        </Label>

                        <Label Text="Registrarse"
                               TextColor="#666666"
                               HorizontalOptions="Center"
                               FontSize="14">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnRegisterClicked"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <!-- Texto de contacto -->
                        <Label Text="¿Encontraste un can sin hogar? Contáctanos"
                               TextColor="#666666"
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               VerticalOptions="End"
                               FontSize="14"
                               Margin="0,20,0,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer 
                                Command="{Binding OpenWhatsAppCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </Frame>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
