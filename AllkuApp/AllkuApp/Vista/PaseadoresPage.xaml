<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllkuApp.Vista.PaseadoresPage"
             NavigationPage.HasNavigationBar="False">
    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Text="Solicitudes Pendientes" 
                   Grid.Column="1" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"
                   FontSize="18"
                   FontAttributes="Bold"/>
            <ImageButton Source="menu_icon.png" 
                        Grid.Column="2"
                        HeightRequest="40" 
                        WidthRequest="40"
                        VerticalOptions="Center"
                        Clicked="OnMenuPaseador_Clicked"/>
        </Grid>

        <!-- Contenido Principal -->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="20">
                <ListView x:Name="SolicitudesListView"
                         HasUnevenRows="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame Margin="5" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackLayout Grid.Column="0">
                                            <Label Text="{Binding NombreCanino}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding NombreDueno}"
                                                   FontSize="16"/>
                                            <Label Text="{Binding CelularDueno}"
                                                   FontSize="14"
                                                   TextColor="Gray"/>
                                            <Label Text="{Binding FechaSolicitud, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                                   FontSize="14"
                                                   TextColor="Gray"/>
                                            <Label Text="{Binding Estado}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#007AFF"
                                                   HorizontalOptions="Center"
                                                   Margin="0,5,0,5"/>

                                            <StackLayout Orientation="Horizontal" 
                                                         HorizontalOptions="Center"
                                                         IsVisible="{Binding MostrarBotonesRespuesta}">
                                                <Button Text="Aceptar"
                                                        BackgroundColor="#28A745"
                                                        TextColor="White"
                                                        CornerRadius="5"
                                                        Padding="20,5"
                                                        Margin="5"
                                                        Clicked="OnAceptarClicked"
                                                        CommandParameter="{Binding .}"/>
                                                <Button Text="Rechazar"
                                                        BackgroundColor="#DC3545"
                                                        TextColor="White"
                                                        CornerRadius="5"
                                                        Padding="20,5"
                                                        Margin="5"
                                                        Clicked="OnRechazarClicked"
                                                        CommandParameter="{Binding .}"/>
                                            </StackLayout>

                                            <StackLayout Orientation="Horizontal" 
                                                         HorizontalOptions="Center"
                                                         IsVisible="{Binding MostrarBotonesPaseo}">
                                                <Button Text="Iniciar Paseo"
                                                        BackgroundColor="#17A2B8"
                                                        TextColor="White"
                                                        CornerRadius="5"
                                                        Padding="20,5"
                                                        Margin="5"
                                                        IsVisible="{Binding PuedeIniciar}"
                                                        Clicked="OnIniciarPaseoClicked"
                                                        CommandParameter="{Binding .}"/>
                                                <Button Text="Finalizar Paseo"
                                                        BackgroundColor="#FFC107"
                                                        TextColor="White"
                                                        CornerRadius="5"
                                                        Padding="20,5"
                                                        Margin="5"
                                                        IsVisible="{Binding PuedeFinalizar}"
                                                        Clicked="OnFinalizarPaseoClicked"
                                                        CommandParameter="{Binding .}"/>
                                            </StackLayout>
                                        </StackLayout>

                                        <!-- Botón de eliminar -->
                                        <Button Grid.Column="1"
                                                Text="×"
                                                FontSize="20"
                                                WidthRequest="30"
                                                HeightRequest="30"
                                                CornerRadius="15"
                                                BackgroundColor="#FF4444"
                                                TextColor="White"
                                                VerticalOptions="Start"
                                                HorizontalOptions="End"
                                                Margin="0,0,0,0"
                                                Clicked="OnEliminarClicked"
                                                CommandParameter="{Binding .}"/>
                                    </Grid>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>