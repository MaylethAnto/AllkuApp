<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllkuApp.Vista.RegistroHistorialPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#f5f5f5">

    <StackLayout Padding="20,40,20,20" x:Name="MainStackLayout">
        <!-- Título de la página con botón "+" -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label x:Name="PageTitle"
                   Text="Registro de Historial Clínico"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#333"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Grid.Column="0"
                   Margin="0, 10, 0, 10"/>
            <Button Text="+" Clicked="OnAddClicked"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="20"
                    WidthRequest="40"
                    HeightRequest="40"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Grid.Column="1" />
        </Grid>

        <!-- Formulario de registro de historial clínico -->
        <Frame x:Name="FormularioStackLayout" 
               BackgroundColor="White" 
               CornerRadius="15" 
               Padding="20" 
               HasShadow="True"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="CenterAndExpand">
            <StackLayout Spacing="15">
                <Label Text="Seleccionar Mascota" TextColor="#666" />
                <Frame BackgroundColor="#eeeeee" CornerRadius="10" Padding="5">
                    <Picker x:Name="CaninoPicker" Title="Seleccione una mascota"
                            ItemsSource="{Binding Caninos}" 
                            ItemDisplayBinding="{Binding nombreCanino}" />
                </Frame>

                <Label Text="Fecha del Historial" TextColor="#666" />
                <Frame BackgroundColor="White" CornerRadius="10" Padding="5">
                    <DatePicker x:Name="FechaPicker" />
                </Frame>

                <Label Text="Tipo de Historial" TextColor="#666" />
                <Frame BackgroundColor="White" CornerRadius="10" Padding="5">
                    <Entry x:Name="TipoHistorialEntry" Placeholder="Tipo de Historial" />
                </Frame>

                <Label Text="Descripción del Historial" TextColor="#666" />
                <Frame BackgroundColor="White" CornerRadius="10" Padding="5">
                    <Editor x:Name="DescripcionEditor" Placeholder="Descripción" HeightRequest="100" />
                </Frame>

                <Label Text="Notificación" TextColor="#666" />
                <Switch x:Name="NotificacionSwitch" />

                <!-- Grid para los botones -->
                <Grid ColumnSpacing="10" Padding="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Text="Guardar" Clicked="OnGuardarClicked"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="25"
                            WidthRequest="150"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Grid.Column="0" />

                    <Button Text="Cancelar" Clicked="OnCancelarClicked"
                            BackgroundColor="#F44336"
                            TextColor="White"
                            CornerRadius="25"
                            WidthRequest="150"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Grid.Column="1" />
                </Grid>
            </StackLayout>
        </Frame>

        <!-- Listado de historiales clínico -->
        <Frame x:Name="ListadoStackLayout" 
               BackgroundColor="White" 
               CornerRadius="15" 
               Padding="20" 
               HasShadow="True"
               IsVisible="False"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand">
            <StackLayout Spacing="15">
                <Label Text="Listado de Historiales Clínicos" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="#333"
                       HorizontalOptions="Center"
                       Margin="0, 10, 0, 10" />

                <!-- ListView para mostrar los historiales clínicos -->
                <ListView x:Name="HistorialesListView" ItemsSource="{Binding Historiales}"
                          VerticalOptions="FillAndExpand" 
                          HorizontalOptions="FillAndExpand">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame Margin="10" Padding="5" BackgroundColor="#eeeeee" CornerRadius="15">
                                    <StackLayout Spacing="10">
                                        <Label Text="{Binding fecha_historial}" 
                                               FontSize="Medium" 
                                               TextColor="#333"/>
                                        <Label Text="{Binding tipo_historial}" 
                                               FontSize="Medium" 
                                               TextColor="#666"/>
                                        <Label Text="{Binding descripcion_historial}" 
                                               FontSize="Small" 
                                               TextColor="#999" 
                                               LineBreakMode="WordWrap"/>
                                    </StackLayout>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>