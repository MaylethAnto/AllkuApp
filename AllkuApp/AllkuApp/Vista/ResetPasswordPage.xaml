<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllkuApp.Vista.ResetPasswordPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <!-- Fondo principal rojo con huellas -->
        <Grid BackgroundColor="#FF3B3B">
            <!-- Patrón de huellas -->
            <Image Source="paw_pattern.png"
                   Aspect="Fill"
                   Opacity="0.1"
                   VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand"/>
        </Grid>

        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <!-- Espacio para header -->
                    <RowDefinition Height="*"/>
                    <!-- Panel blanco -->
                </Grid.RowDefinitions>

                <!-- Header con botón de atrás -->
                <Grid Grid.Row="0" Padding="20,40,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ImageButton 
                        Grid.Column="0"
                        Source="back_arrow_white.png"
                        HeightRequest="24"
                        WidthRequest="24"
                        BackgroundColor="Transparent"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        Clicked="OnBackButtonClicked"/>
                </Grid>

                <!-- Panel blanco curvo -->
                <Frame Grid.Row="1"
                       BackgroundColor="White"
                       CornerRadius="30"
                       HasShadow="False"
                       Padding="20,30,20,20"
                       Margin="0,-30,0,0">
                    <StackLayout Spacing="15">
                        <!-- Logo -->
                        <Image Source="LogoImage.png" 
                               HeightRequest="100" 
                               HorizontalOptions="Center"/>

                        <Label Text="Restablecer Contraseña"
                               FontSize="24"
                               HorizontalOptions="Center"
                               Margin="0,20,0,20"/>

                        <!-- Campos de entrada -->
                        <Label Text="CÓDIGO DE RECUPERACIÓN"
                               TextColor="#666666"
                               FontSize="12"/>
                        <Frame BackgroundColor="#F5F5F5"
                               Padding="15,0"
                               CornerRadius="5"
                               HasShadow="False"
                               HeightRequest="45">
                            <Entry x:Name="TokenEntry" 
                                   Placeholder="Código de Recuperación"
                                   PlaceholderColor="#CCCCCC"
                                   BackgroundColor="Transparent"
                                   TextColor="Black"/>
                        </Frame>

                        <Label Text="NUEVA CONTRASEÑA"
                               TextColor="#666666"
                               FontSize="12"
                               Margin="0,10,0,0"/>
                        <Frame BackgroundColor="#F5F5F5"
                               Padding="15,0"
                               CornerRadius="5"
                               HasShadow="False"
                               HeightRequest="45">
                            <Entry x:Name="NewPasswordEntry" 
                                   Placeholder="Nueva Contraseña"
                                   IsPassword="True"
                                   PlaceholderColor="#CCCCCC"
                                   BackgroundColor="Transparent"
                                   TextColor="Black"/>
                        </Frame>

                        <Label Text="CONFIRMAR CONTRASEÑA"
                               TextColor="#666666"
                               FontSize="12"
                               Margin="0,10,0,0"/>
                        <Frame BackgroundColor="#F5F5F5"
                               Padding="15,0"
                               CornerRadius="5"
                               HasShadow="False"
                               HeightRequest="45">
                            <Entry x:Name="ConfirmPasswordEntry" 
                                   Placeholder="Confirmar Contraseña"
                                   IsPassword="True"
                                   PlaceholderColor="#CCCCCC"
                                   BackgroundColor="Transparent"
                                   TextColor="Black"/>
                        </Frame>

                        <!-- Botón de restablecer -->
                        <Button Text="Restablecer Contraseña"
                                BackgroundColor="#0000FF"
                                TextColor="White"
                                CornerRadius="5"
                                HeightRequest="45"
                                Margin="0,20,0,10"
                                Clicked="OnResetPasswordClicked"/>
                    </StackLayout>
                </Frame>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
